<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.SubPratoComidaFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imgBtnCarneP"
                android:layout_width="200dp"
                android:layout_height="180dp"
                android:layout_weight="1"
                android:src="@drawable/carne" />

            <ImageButton
                android:id="@+id/imgBtnPeixep"
                android:layout_width="200dp"
                android:layout_height="180dp"
                android:layout_weight="1"
                android:src="@drawable/peixe" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imgBtnVeganP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/vegan" />

            <ImageButton
                android:id="@+id/imgBtnVegetarianoP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/vegetariano" />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>